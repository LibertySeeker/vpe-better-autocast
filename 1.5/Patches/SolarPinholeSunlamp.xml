<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VPE Solar Pinhole Sunlamp</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/VFECore.Abilities.AbilityDef[defName="VPE_SolarPinholeSunlamp"]</xpath>
          <value>
            <distanceToTarget>24.9</distanceToTarget>
            <jobDef>BetterAutocastVPE_GotoLocationAndCastAbilityOnce</jobDef>
            <requireLineOfSight>false</requireLineOfSight>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/VFECore.Abilities.AbilityDef[defName="VPE_SolarPinholeSunlamp"]/range</xpath>
          <value>
            <range>999999</range>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
